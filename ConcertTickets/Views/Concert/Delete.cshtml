@model Concert

<div class="row text">
    <div class="col-md-10 offset-2">
        <div class="row">
            <div class="col-md-10 ">
                <div class="badge badge-light rounded text-info" style="margin-top: 70px;margin-bottom: 10px; display:block;">
                    <p>
                        <h3>Delete confirmation for @Model.GroupOrArtistName</h3>
                    </p>
                </div>
                <div class="form-group navbar bg-white border-bottom box-shadow justify-content-around" style="position:relative">
                    <img src="@Model.ImageURL" style="max-width: 200px" class="col-md-4" id="ProfilePicturePreview" alt="@Model.GroupOrArtistName"/>
                <div class="col-md-6">
                    <div class="card-body">
                        <p class="card-text"><b>Name:</b> @Model.GroupOrArtistName </p>
                        <p class="card-text"><b>Description:</b> @Model.Description </p>
                    </div>
                </div>
                </div>                
                    <div class="form-group">
                        <form asp-action="Delete">
                            <input type="hidden" asp-for="ConcertId" />
                            <input type="submit" value="Confirm" class="btn btn-danger float-right" />
                        </form>
                        <a class="btn btn-outline-secondary" asp-action="Index">Back to list</a>
                    </div>
            </div>
        </div>
    </div>
</div>
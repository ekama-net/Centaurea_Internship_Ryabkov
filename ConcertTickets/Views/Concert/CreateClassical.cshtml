@model ClassicalConcert

@{
    ViewData["Title"] = "Add new Classical Concert";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <div class="badge badge-light rounded text-info" style="margin-top: 70px;margin-bottom: 10px; display:block;">
            <p>
                <h3>Add new Classical Concert</h3>
            </p>
        </div>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form action="/Concert/CreateClassical" enctype="multipart/form-data" id="actn" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group text-center">
                    <img id="ImageURLprev"/>
                    </div>
                    <div class="form-group">
                        <label asp-for="ImageURL" class="control-label"></label>
                        <input asp-for="ImageURL" class="form-control"/>
                        <span asp-validation-for="ImageURL" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="GroupOrArtistName" class="control-label"></label>
                        <input asp-for="GroupOrArtistName" class="form-control"/>
                        <span asp-validation-for="GroupOrArtistName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <input asp-for="Description" class="form-control"/>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="TicketsCount" class="control-label"></label>
                        <input asp-for="TicketsCount" class="form-control"/>
                        <span asp-validation-for="TicketsCount" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="EventDate" class="control-label"></label>
                        <input asp-for="EventDate" class="form-control"/>
                        <span asp-validation-for="EventDate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="EventPlace" class="control-label"></label>
                        <input asp-for="EventPlace" class="form-control"/>
                        <span asp-validation-for="EventPlace" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Price" class="control-label"></label>
                        <input asp-for="Price" class="form-control"/>
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="VoiceType" class="control-label"></label>
                        <select asp-for="VoiceType"  class="form-control" option asp-items="@new SelectList(Enum.GetNames(typeof(VoiceType)))"></select>
                        <span asp-validation-for="VoiceType" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ConcertName" class="control-label"></label>
                        <input asp-for="ConcertName" class="form-control"/>
                        <span asp-validation-for="ConcertName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="СomposerName" class="control-label"></label>
                        <input asp-for="СomposerName" class="form-control"/>
                        <span asp-validation-for="СomposerName" class="text-danger"></span>
                    </div>                                       
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-outline-success float-right" />
                        <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                    </div>
                </form>
            </div>   
        </div>
    </div>
</div>



@section Scripts{
    <script>
        $("#ImageURL").on("change", function(){
            var output = document.getElementById('ImageURLprev');
            output.src = $(this).val();
        })
    </script>
}

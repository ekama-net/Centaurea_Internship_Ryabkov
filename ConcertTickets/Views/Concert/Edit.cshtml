                        </div>   
                    }*@
                    @if(Model is PartyConcert party)
                    {

                        <div class="form-group">
                            <label asp-for="@party.AgeLimit" class="control-label"></label>
                            <input asp-for="@party.AgeLimit" class="form-control"/>
                            <span asp-validation-for="@party.AgeLimit" class="text-danger"></span>
                        </div>   
                    }
                  @*  @if(Model is OpenAirConcert openAir)
                    {

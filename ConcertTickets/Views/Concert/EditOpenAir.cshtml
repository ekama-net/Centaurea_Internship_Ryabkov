@model OpenAirConcert

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1 class="text-center">Update data for @Model.GroupOrArtistName</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2"> 
                <form asp-action="EditOpenAir" enctype="multipart/form-data" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group text-center">
                    <img src="@Model.ImageURL"  width="30%" id="ImageURLprev"/>
                    </div>
                    <div class="form-group">
                        <label asp-for="ImageURL" class="control-label"></label>
                        <input asp-for="ImageURL" class="form-control"/>
                        <span asp-validation-for="ImageURL" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="GroupOrArtistName" class="control-label"></label>
                        <input asp-for="GroupOrArtistName" class="form-control"/>
                        <span asp-validation-for="GroupOrArtistName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <input asp-for="Description" class="form-control"/>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="TicketsCount" class="control-label"></label>
                        <input asp-for="TicketsCount" class="form-control"/>
                        <span asp-validation-for="TicketsCount" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="EventDate" class="control-label"></label>
                        <input asp-for="EventDate" class="form-control"/>
                        <span asp-validation-for="EventDate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="EventPlace" class="control-label"></label>
                        <input asp-for="EventPlace" class="form-control"/>
                        <span asp-validation-for="EventPlace" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Price" class="control-label"></label>
                        <input asp-for="Price" class="form-control"/>
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                        <div class="form-group">
                            <label asp-for="HowToGetTo" class="control-label"></label>
                            <input asp-for="HowToGetTo" class="form-control"/>
                            <span asp-validation-for="HowToGetTo" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="HeadLiner" class="control-label"></label>
                            <input asp-for="HeadLiner" class="form-control"/>
                            <span asp-validation-for="HeadLiner" class="text-danger"></span>
                        </div>
                    <div class="form-group">
                        <input type="submit" asp-route-id="@Model.ConcertId" value="Save" class="btn btn-outline-success float-right" />
                        <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                    </div>
               </form>
            </div>   
        </div>
    </div>
</div>



@section Scripts{
    <script>
        $("#ImageURL").on("change", function(){
            var output = document.getElementById('ImageURLprev');
            output.src = $(this).val();
        })
    </script>
}